<div class="max-w-1280 container mx-auto px-4 pb-8 pt-12 text-gray-950">
  {% if section.settings.title != blank
    or section.settings.left_logo != blank
    or section.settings.right_logo != blank
  %}
    <div class="max-h-12 flex justify-center gap-x-6 text-5xl">
      {% if section.settings.left_logo != blank %}
        <img src="{{ section.settings.left_logo | image_url: width: 1600 }}">
      {% endif %}

      {% if section.settings.title != blank %}
        {{ section.settings.title }}
      {% endif %}

      {% if section.settings.right_logo != blank %}
        <img src="{{ section.settings.right_logo | image_url: width: 1600 }}">
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.subtitle != blank %}
    <div class="mt-2 text-center text-xl">
      {{ section.settings.subtitle }}
    </div>
  {% endif %}
</div>

{%- style -%}
  img {
    width: {{ section.settings.logo_width }}rem;
  }
{%- endstyle -%}

{% comment %}
  h-40: 40 * 0.25 / 0.625 = 16rem
{% endcomment %}

{% schema %}
{
  "name": "Title",
  "tag": "section",
  "presets": [{ "name": "Title" }],
  "settings": [
    {
      "label": "Title",
      "id": "title",
      "type": "richtext"
    },
    {
      "label": "Sub Title",
      "id": "subtitle",
      "type": "richtext"
    },
    {
      "label": "Left Logo",
      "id": "left_logo",
      "type": "image_picker"
    },
    {
      "label": "Right Logo",
      "id": "right_logo",
      "type": "image_picker"
    },
    {
      "label": "Logo Width",
      "id": "logo_width",
      "type": "range",
      "min": 10,
      "max": 20,
      "step": 0.1,
      "unit": "rem",
      "default": 16
    }
  ],
  "enabled_on": {
    "templates": ["*"],
    "groups": ["*"]
  }
}
{% endschema %}
